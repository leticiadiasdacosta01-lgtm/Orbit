# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://orbit:orbit_dev_password@localhost:5432/orbit_dev?schema=public"

# ============================================
# REDIS
# ============================================
REDIS_URL="redis://:orbit_redis_password@localhost:6379"

# ============================================
# NEXT AUTH
# ============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# ============================================
# API
# ============================================
API_URL="http://localhost:3001"
PORT=3001
HOST="0.0.0.0"

# JWT
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long-change-in-production"
JWT_EXPIRES_IN="7d"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Redis (for API)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD="orbit_redis_password"

# ============================================
# AWS S3 (or S3-compatible storage)
# ============================================
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="orbit-uploads-dev"

# ============================================
# EMAIL (SMTP)
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@orbit.app"

# ============================================
# SENTRY (Error Tracking)
# ============================================
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV="development"
